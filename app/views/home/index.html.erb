<h1>Home#index</h1>
<p>Welcome To Workout Manager</p>
</ br>

<h1>Workouts</h1>

<%= link_to "Create Workout", :controller => "workouts", :action => "new" %>

<% @workouts.each do |workout| %>
	
	<a id="workout_container_<%= workout.id %>" class="workout_container" href="/workouts/edit/<%= workout.id %>">
		<div id="workout_<%= workout.id %>" class="workout">

			<div class="workout_name_<%= workout.id %>" class="workout_name">
				<%= workout.name %>
			</div>

		</div>
	</a>

<% end %>
